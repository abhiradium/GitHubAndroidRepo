<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/slide_image" android:layout_width="wrap_content"
        android:layout_height="117dp" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:layout_marginTop="182dp"
        app:srcCompat="@drawable/music_player" />

    <TextView android:id="@+id/description" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:layout_marginBottom="186dp"
        android:text="Play it" android:textColor="@android:color/black" android:textSize="50sp"
        android:textStyle="bold" app:fontFamily="@font/eb_garamond" />
</RelativeLayout>