<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.player">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <supports-screens android:anyDensity="true" android:largeScreens="true"
        android:normalScreens="true" android:smallScreens="true" android:xlargeScreens="true" />

    <application android:allowBackup="true" android:icon="@mipmap/if_play_1646000"
        android:label="@string/app_name" android:resizeableActivity="true"
        android:roundIcon="@mipmap/if_play_1646000" android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PlayerScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
        <activity android:name=".SongsList" android:label="My Library"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"></activity>

        <meta-data android:name="preloaded_fonts" android:resource="@array/preloaded_fonts" />

    </application>

</manifest>